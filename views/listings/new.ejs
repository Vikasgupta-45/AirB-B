<% layout("layouts/boilerplate")%>
<body>  <br>
    <h2 class="addtopic">Add New Listings</h2>
     <div class="row"></div>
     <div class="col-8 offset-2">
    <form method="post" action="/listings" novalidate class="needs-validation">
        <div class="mb-2">
        <Label for="title" class="form-label">Title</Label>
        <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control" required>
        <div class="invalid-feedback">
        Please give a valid title
       </div>
        </div>
    
        <div class="mb-2">
        <Label for="discription" class="form-label">Description</Label>
        <input name="listing[description]" placeholder="Enter Description" type="text"class="form-control"required>
        <div class="invalid-feedback">
        Please give a valid description
       </div>
        </div>

        <div class="mb-2">
        <Label for="image" class="form-label">Image</Label>
        <input name="listing[image][url]" placeholder="Enter image url/link" type="text"class="form-control" >
       
        </div>
        
        <div class="row">
        <div class="mb-2 col-md-4">
        <Label for="price" class="form-label">Price</Label>
        <input name="listing[price]" placeholder="Enter price" type="TEXT"class="form-control"required>
        <div class="invalid-feedback">
        Please enter Price
       </div>
        </div>
        <div class="mb-2 col-md-8">
        <Label for="country" class="form-label">Country</Label>
        <input name="listing[country]" placeholder="Enter country" type="text"class="form-control"required>
        <div class="invalid-feedback">
        Please enter Country
       </div>
        </div>
        </div>

        <div class="mb-2">
        <Label for="location" class="form-label">Location</Label>
        <input name="listing[location]" placeholder="Enter location" type="text"class="form-control"required>
        <div class="invalid-feedback">
        Please enter Location
       </div>
        </div>
        
        <div class="addbutton"><button class="addbtn">Add</button></div>
        <br><br>
    </form>
    </div>
    </div>
</body>
